<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Custom="http://infragistics.com/DataPresenter" x:Class="AmitCustomerWPF.View.LiveCustomersView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Margin="0,63,10,0">

        <Custom:XamDataGrid   DataSource="{Binding AllCustomersView}" HorizontalAlignment="Left" Margin="0,98,0,0" VerticalAlignment="Top" Width="273" Background="Yellow" BindToSampleData="False" DataSourceResetBehavior="DiscardExistingRecords" SortRecordsByDataType="True" IsSynchronizedWithCurrentItem="True" Height="101">
            <Custom:XamDataGrid.ViewSettings>
                <Custom:GridViewSettings UseNestedPanels="True"/>
            </Custom:XamDataGrid.ViewSettings>
        </Custom:XamDataGrid>

    </Grid>
</UserControl>
